{
    "name": "Slack Private Message",
    "version": "0.0.1",
    "manifest_version": 2,
    "permissions": 
        ["contextMenus",
		    "tabs",
        "storage"
        ],
    "browser_action": {
        "default_action": "logo.png",
        "default_popup": "popup.html"
        },
    "content_scripts": [
      {
        "matches": ["*://app.slack.com/*"],
        "js": [
          "dist/bundle.js"
        ]
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }